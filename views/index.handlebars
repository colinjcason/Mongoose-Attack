  <a class="navbar-brand" href="#">Homebrew Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Saved Article</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/">
          <button type="button" class="btn btn-danger">Scrape New Articles!</button></a>
      </li>
       <li class="nav-item">
        <a class="nav-link" href="/clear">
          <button type="button" class="btn btn-danger">Clear Articles!</button></a>
